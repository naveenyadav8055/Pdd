<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="0dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Back"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/vector" />

    <!-- Total Progress Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <!-- Large Circular Progress for Total -->
    <FrameLayout
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ProgressBar
            android:id="@+id/progressTotal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="205dp"
            android:layout_height="205dp"
            android:progress="60"
            android:progressDrawable="@drawable/progressbar" />

        <!-- Centered Percentage Text -->
        <TextView
            android:id="@+id/txtTotalPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63%"
            android:background="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"

            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"/>
    </FrameLayout>

    <!-- Grid Layout for Small Progress Circles -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp">

        <ProgressBar
            android:id="@+id/progressTotal1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:progress="60"
            android:layout_marginStart="40dp"
            android:progressDrawable="@drawable/minibar" />

        <!-- Centered Percentage Text -->
        <TextView
            android:id="@+id/txtTotalPercentage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63%"
            android:background="@color/white"
            android:textSize="24sp"
            android:layout_marginStart="25dp"
            android:textStyle="bold"

            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-120dp">

        <ProgressBar
            android:id="@+id/progressTotal2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:progress="60"
            android:layout_marginEnd="50dp"
            android:progressDrawable="@drawable/minibar" />

        <!-- Centered Percentage Text -->
        <TextView
            android:id="@+id/txtTotalPercentage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63%"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"

            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"/>
    </FrameLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:text="Social Skills"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Play Skills"
        android:layout_marginLeft="220dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="-15dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp">

        <ProgressBar
            android:id="@+id/progressTotal3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:progress="60"
            android:layout_marginStart="40dp"
            android:progressDrawable="@drawable/minibar" />

        <!-- Centered Percentage Text -->
        <TextView
            android:id="@+id/txtTotalPercentage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63%"
            android:background="@color/white"
            android:textSize="24sp"
            android:layout_marginStart="25dp"
            android:textStyle="bold"

            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-120dp">

        <ProgressBar
            android:id="@+id/progressTotal4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:progress="60"
            android:layout_marginEnd="50dp"
            android:progressDrawable="@drawable/minibar" />

        <!-- Centered Percentage Text -->
        <TextView
            android:id="@+id/txtTotalPercentage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63%"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"

            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"/>
    </FrameLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="10dp"
        android:text="Self Help Skills"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="180dp"
        android:gravity="center"
        android:text="Handling Behavioral issues"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="-20dp" />

</LinearLayout>
