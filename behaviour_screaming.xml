<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/main"
    android:padding="10dp">

  <!-- Back Button -->
  <ImageView
      android:id="@+id/backButton"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_margin="10dp"
      android:src="@drawable/vector"
      android:contentDescription="Back"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <!-- Notification Bell Icon -->

  <!-- Title -->
  <TextView
      android:id="@+id/titleText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="SCREAMING"
      android:layout_marginLeft="20dp"
      android:textSize="18sp"
      android:textStyle="bold"
      android:textColor="@android:color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/backButton"
      android:layout_marginTop="10dp"/>

  <!-- Video Placeholder -->
  <ImageView
      android:id="@+id/videoPlaceholder"
      android:layout_width="300dp"
      android:layout_height="180dp"
      android:src="@drawable/handiling_screaming"
      android:scaleType="centerCrop"
      android:background="@android:color/darker_gray"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/titleText"
      android:layout_marginTop="8dp"/>

  <!-- Play Button -->
  <ImageView
      android:id="@+id/playButton"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/play"
      android:contentDescription="Play Video"
      app:layout_constraintStart_toStartOf="@id/videoPlaceholder"
      app:layout_constraintEnd_toEndOf="@id/videoPlaceholder"
      app:layout_constraintTop_toTopOf="@id/videoPlaceholder"
      app:layout_constraintBottom_toBottomOf="@id/videoPlaceholder"/>

  <!-- Question 1 -->
  <TextView
      android:id="@+id/question1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:text="How confident are you to teach this skill to your child?"
      android:layout_marginTop="10dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/videoPlaceholder"/>
  <TextView
      android:id="@+id/progressText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="164dp"
      android:layout_marginTop="8dp"
      android:text="0"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/question1" />


  <!-- Question 2 -->
  <SeekBar
      android:id="@+id/seekBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="35dp"
      android:max="10"
      android:progress="0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/question1" />

  <TextView
      android:id="@+id/question2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="How many times have you practiced coaching this skill with your child?"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/seekBar"/>
  <TextView
      android:id="@+id/progress1Text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="168dp"
      android:layout_marginTop="4dp"
      android:text="0"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/question2" />

  <!-- Question 3 -->

  <SeekBar
      android:id="@+id/seekBar1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:max="10"
      android:progress="0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/question2" />

  <TextView
      android:id="@+id/question3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="How proficient is your child with this skill at present?"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="10dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/seekBar1"/>
  <TextView
      android:id="@+id/progress2Text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="172dp"
      android:layout_marginTop="4dp"
      android:text="0"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/question3" />

  <!-- Question 4 -->
  <SeekBar
      android:id="@+id/seekBar2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="36dp"
      android:max="10"
      android:progress="0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/question3" />

  <TextView
      android:id="@+id/question4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="How confident are you to apply this method of training for your child in other domains?"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/seekBar2"/>
  <TextView
      android:id="@+id/progress3Text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="176dp"
      android:layout_marginTop="4dp"
      android:text="0"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/question4" />


  <!-- Next Button -->

  <SeekBar
      android:id="@+id/seekBar3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:max="10"
      android:progress="0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/question4" />

  <Button
      android:id="@+id/btn_next"
      android:layout_width="220dp"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/blue"
      android:text="Submit"
      android:textColor="@android:color/white"
      android:textSize="20sp"
      android:layout_marginTop="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/seekBar3"/>

</androidx.constraintlayout.widget.ConstraintLayout>